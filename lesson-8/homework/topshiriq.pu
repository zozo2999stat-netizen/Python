for i in range(1,10):
    if a > 10:
        print(f"{i} ga bo'lgandagi qoldiq: {a%i}")
    elif 1 < a <= 10:
        if i <= a:
            print(f"{i} ga bo'lgandagi qoldiq: {a%i}")
        elif i > a:
            break

